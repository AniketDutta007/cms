// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  CANTEEN
  ADMIN
}

model User {
  id       String   @id @default(uuid())
  email    String
  name     String
  password String
  role     Role
  @@unique([email, role])
}